# ForenSight Environment Configuration

# LLM 供应商（支持 deepseek / zhipu / minimax）
LLM_PROVIDER=minimax

# 模型名称（默认 MiniMax）
LLM_MODEL_NAME=MiniMax-M2.1

# API 密钥
LLM_API_KEY=your_llm_api_key_here

# API 基础 URL
# DeepSeek: https://api.deepseek.com
# Zhipu(Anthropic兼容): https://open.bigmodel.cn/api/coding/paas/v4
# MiniMax(Anthropic兼容): https://api.minimaxi.com/anthropic
LLM_BASE_URL=https://api.minimaxi.com/anthropic

# 超时与重试（秒/次数）
LLM_TIMEOUT_SECONDS=90
LLM_MAX_RETRIES=2

# Tavily API Key (可选，用于联网检索)
TAVILY_API_KEY=

# 调试模式
DEBUG=false
